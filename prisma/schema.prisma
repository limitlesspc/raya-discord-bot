generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id        String   @id @db.Char(18)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  counts Json?
}

model Playlist {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  uid   String @db.Char(18)
  name  String
  songs Json

  @@unique([uid, name])
}

model Ratio {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  text String @unique
}

model File {
  id String @id @default(cuid())

  name      String
  extension String @db.VarChar(4)

  @@unique([name, extension])
  @@fulltext([name])
}

model Y7Image {
  id String @id @default(cuid())

  fileName String @unique
  size     Int
  width    Int    @db.UnsignedSmallInt
  height   Int    @db.UnsignedSmallInt

  @@fulltext([fileName])
}

model Y7GIF {
  id String @id @default(cuid())

  fileName String @unique
  size     Int    @db.UnsignedInt
  width    Int    @db.UnsignedSmallInt
  height   Int    @db.UnsignedSmallInt
  frames   Int    @db.UnsignedSmallInt

  @@fulltext([fileName])
}

model Chicken {
  fileName String @id
}

model SpeechBubble {
  fileName String @id
}
